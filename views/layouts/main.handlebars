<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlogWithMe</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geologica&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="flex-column">
      <header class="display-flex align-center">
        <a href="/" class="logo">
          <img src="/images/logo.png" alt="BlogWithMe" class="logo-img" />
        </a>
        <nav class="menu display-flex">
          <a href="/" class="nav-links">Home</a>

          <a href="/dashboard" class="nav-links">Dashboard</a>
          {{#if logged_in}}
            <a class="nav-links" href="/" id="logout">Logout</a>
          {{else}}
            <a href="/login" class="nav-links">Login</a>

          {{/if}}
        </nav>
      </header>
      <main class="container container-fluid mt-5 mb-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>&copy; Created by Sadima Maharjan </footer>

    </div>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>