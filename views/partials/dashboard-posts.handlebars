<div class="row mb-4 post">
  <div class="col-md-12 post-head">
    <div class="row">
      <div class="col-md-8">
        <h4 class="title">
          <a class="link" href="/dashboard/update/{{id}}">{{title}}</a>
        </h4>
      </div>
      <div class="col-md-4">
        <div class="created_by">
          <h5>Posted by
            {{user.username}}
            on
            {{format_date date_created}}</h5>
        </div>
      </div>
    </div>
  </div>
</div>